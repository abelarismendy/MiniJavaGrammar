Token saveGlobalNamesxType(String type):
{
  Token t;
}
{
	t = < WORD >
	{
	 	if (type == "VAR"){ 
	  		varNames.add(t.image);
	 	} else if (type == "PROC"){
	 	  	procNames.add(t.image);
	 	}
	 	return t;
	}
}

